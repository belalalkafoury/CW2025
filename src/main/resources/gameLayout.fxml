<?import com.comp2042.view.GameOverPanel?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<Pane fx:controller="com.comp2042.controller.GuiController"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="700" prefHeight="600">


    <Label fx:id="scoreLabel"
           text="Score: 0"
           layoutX="20"
           layoutY="10"
           style="-fx-font-size: 20px; -fx-text-fill: white;"/>


    <BorderPane styleClass="gameBoard" fx:id="gameBoard"
                layoutX="250" layoutY="50">
        <center>
            <GridPane fx:id="gamePanel"
                      hgap="1"
                      vgap="1"
                      alignment="CENTER"/>
        </center>
    </BorderPane>


    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>


    <Group fx:id="groupNotification" layoutX="250" layoutY="50">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</Pane>
